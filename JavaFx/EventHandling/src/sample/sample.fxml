<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="textField" GridPane.rowIndex="0" GridPane.columnIndex="0"
                onKeyReleased="#handleKeyRelesed"/>

    <Button fx:id="HelloButton" text="Hello Guys" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonClicked"/>
    <Button fx:id="ByeButton" text="Bye Guys" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#onButtonClicked"/>
    <CheckBox fx:id="myCheckBox" text="Clear after effect" GridPane.rowIndex="2" GridPane.columnIndex="0"
    GridPane.columnSpan="2" onAction="#handleChange"/>
    <Label fx:id="ourLabel" text="Nothing happened" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>